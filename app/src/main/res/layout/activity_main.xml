<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".presentation.MainActivity">


    <TextView

        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/burguer__1_"
        android:id="@+id/burguer"/>

    <TextView
        android:id="@+id/name_porcentajeTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/burguer"
        android:layout_marginEnd="15dp"

        android:textSize="25dp"
        android:background="@color/yellow"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingBottom="5dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/name_burguer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="sans-serif-medium"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/name_porcentajeBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@id/burguer"
        android:textSize="20dp"
        android:layout_below="@id/burguer"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:id="@+id/porcentaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignEnd="@id/burguer"
        android:layout_below="@id/burguer"
        android:layout_marginEnd="20dp"
        android:textSize="20dp"
    />
    <LinearLayout
        android:layout_below="@id/porcentaje"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PorcentajeArriba"
            />
        <EditText
            android:id="@+id/label_porcentajeTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            />
        <EditText
            android:id="@+id/label_name_Burguer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="minutos"
            />
        <EditText
            android:id="@+id/label_minutes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="porcentajeAbajo"
            />
        <EditText
            android:id="@+id/label_porcentajeBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/action_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/porcentaje"
            android:text="guardar"
            />
        <Button
            android:id="@+id/action_recover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/porcentaje"
            android:text="Mostrar"
            />

    </LinearLayout>





</RelativeLayout>